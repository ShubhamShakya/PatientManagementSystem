<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/teal_700"
    app:cardCornerRadius="25dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PatientEmail"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/scheduledAppointmentDoctorAppointmentEmail"
        android:layout_marginStart="120dp"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Text"
        android:textSize="18sp"
        android:textColor="@color/white"
        />



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppointmentDate"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"/>
    <TextView
        android:id="@+id/scheduledAppointmentDoctorAppointmentDate"
        android:layout_marginStart="150dp"
        android:layout_marginTop="29dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Text"
        android:textSize="18sp"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppointmentTime"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginTop="58dp"/>

    <TextView
        android:id="@+id/scheduledAppointmentDoctorAppointmentTime"
        android:layout_marginStart="150dp"
        android:layout_marginTop="53dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Text"
        android:textSize="18sp"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disease"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_marginTop="78dp"/>

    <TextView
        android:id="@+id/scheduledAppointmentDoctorDisease"
        android:layout_marginStart="90dp"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Text"
        android:textSize="18sp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btnItemDoctorScheduledAppointmentConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:background="@color/teal_200"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="25dp"/>


</androidx.cardview.widget.CardView>